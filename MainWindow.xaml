        <Grid x:Name="gridTBZamowienie1" Margin="20,20,405,330">

            <TextBlock x:Name="tbZamowienie1" HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="45" Width="375" Background="#FFFDF7F7"/>
        </Grid>
        <Button x:Name="btZamknijZamowienie1" Content="Zamknij zamówienie" HorizontalAlignment="Right" Margin="0,0,672,10" VerticalAlignment="Bottom" Width="118" Height="20" Click="btZamknijZamowienie_Click"/>
        <!-- powyższy button wsadzić do grida wyżej tak aby był na dole siatki trzymającej nasze zamówienie-->
        <TextBlock x:Name="tbZamowienie2" HorizontalAlignment="Left" Margin="405,22,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="29" Width="375" Background="#FFFDF7F7"/>
        <TextBlock x:Name="tbZamowienie3" HorizontalAlignment="Left" Margin="20,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="29" Width="375" Background="#FFFDF7F7"/>
        <TextBlock x:Name="tbZamowienie4" HorizontalAlignment="Left" Margin="405,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="29" Width="375" Background="#FFFDF7F7"/>


    </Grid>
</Window>